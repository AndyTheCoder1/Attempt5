<center>

<hr>
<div>
  <div>
  
    <h1>
      Question of the Day:
      </h1>
      <div></div>
      <h2 style="color:blue">
      "What is your happiest memory from the past year?"
      </h2>
<hr>

<div>
  <div>
    <h2>
      Add a new Answer
    </h2>

    <form action="/insert_question" method="post">
      <div>
        <label for="question_box">
        </label>

        <textarea id="question_box" name="query_question" rows="3"></textarea>
      </div>

      <button>
        Post Answer
      </button>
    </form>
  </div>
</div>

</center>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Question
        </th>

        <th>
          Answers count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_questions.each do |a_question| %>
      <tr>
        <td>
          <%= a_question.id %>
        </td>

        <td>
          <%= a_question.question %>
        </td>

        <td>
          <%= a_question.answers_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_question.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_question.updated_at) %> ago
        </td>

        <td>
          <a href="/questions/<%= a_question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>


