<h1><%=@correct_user.username%>'s Answers</h1>
  <div>
  <div>
    <table border="1">
      <tr>

        <th>
          Entry
        </th>

    

        <th>
          Decoratation count
        </th>


        <th>
          posting Time
        </th>

        <th>
   
        </th>

        <th>
          Question Answered
        </th>
      </tr>

      <% @matching_answers.each do |an_answer| %>
      <tr>
        <td>
          <%= an_answer.entry %>
        </td>

        <td>
          <%= an_answer.decoratations_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_answer.created_at) %> ago
        </td>

        <td>
          <%= an_answer.question.question %>
        </td>
        

        <td>
          <a href="/decorating/<%= an_answer.id %>">
            Decorate this Answer
          </a>
        </td>
      </tr>
      <%end%>
    </table>
  </div>
</div>




