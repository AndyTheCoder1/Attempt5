


<center>
<hr>
<div>
  <div>
  
    <h1>
      Question of the Day:
      </h1>
      <div></div>
      <h2 style="color:blue">
      "What is your happiest memory from the past year?"
      </h2>
<hr>


<div>
  <div>
    <h2>
      Add a New Answer
    </h2>  

    <form action="/insert_answer" method="post">
      <div>
        <label for="entry_box">
        </label>

        

        <textarea id="entry_box" name="query_entry" rows="3"></textarea>
      </div>

      
      <button>
        Post answer
      </button>
<hr>
      </center>  

      <div>
        <label for="owner_id_box">
        </label>

        <input type="hidden" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <label for="image_box">
        </label>

        <input type="hidden" id="image_box" name="query_image">
      </div>

      <div>
        <label for="question_id_box">
        </label>

        <input type="hidden" id="question_id_box" name="query_question_id">
      </div>

      <div>
        <label for="decoratations_count_box">
        </label>

        <input type="hidden" id="decoratations_count_box" name="query_decoratations_count">
      </div>

      <div>
        <label for="comments_count_box">
        </label>

        <input type="hidden" id="comments_count_box" name="query_comments_count">
      </div>

      
    </form>
  </div>
</div>

<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Entry
        </th>

        <th>
          Owner
        </th>

        <th>
          Image
        </th>

        <th>
          Decoratations count
        </th>


        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_answers.each do |an_answer| %>
      <tr>
        <td>
          <%= an_answer.id %>
        </td>

        <td>
          <%= an_answer.entry %>
        </td>

        <td>
          <%= an_answer.owner.username %>
        </td>

        <td>
          <%= an_answer.image %>
        </td>

        <td>
          <%= an_answer.decoratations_count %>
        </td>


        <td>
          <%= time_ago_in_words(an_answer.created_at) %> ago
        </td>
      

        <td>
          <a href="/answers/<%= an_answer.id %>">
            view profile need to fix
          </a>
        </td>
        <td>
          <a href="/answers/<%= an_answer.id %>">
            Decorate this Answer
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
